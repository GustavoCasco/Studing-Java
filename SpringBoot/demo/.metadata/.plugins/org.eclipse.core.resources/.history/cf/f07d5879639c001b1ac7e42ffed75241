package com.example.demo.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.demo.Models.AlunoModel;
import com.example.demo.Models.enderecoModel;
import com.example.demo.repositories.enderecoRepository;

@Service
public class enderecoService {
	@Autowired
	private enderecoRepository enderecoResp;
	
	public List<enderecoModel> getAll ()
	{
		return this.enderecoResp.findAll();
	}
	
	public enderecoModel getById (int id)
	{
		return enderecoResp.findById(id).orElseThrow(() -> new RuntimeException("Endereço não localizado"));
	}
	
	public enderecoModel cadastrarEnderco (enderecoModel novoEndereco)
	{
		return this.enderecoResp.save(novoEndereco);
	}
	
	public enderecoModel updEndereco (int id, enderecoModel attEndereco)
	{
		enderecoModel end = this.getById(id);
		end.setBairro(attEndereco.getBairro());
		end.setCep(attEndereco.getCep());
		end.setLogradouro(attEndereco.getLogradouro());
		end.setNumero(attEndereco.getNumero());
		return this.enderecoResp.save(end);
	}
}
