package com.example.demo.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.demo.Models.enderecoModel;
import com.example.demo.repositories.enderecoRepository;

@Service
public class enderecoService {
	@Autowired
	private enderecoRepository enderecoResp;
	
	public List<enderecoModel> getAll ()
	{
		return this.enderecoResp.findAll();
	}
	
	public enderecoModel getById (int id)
	{
		return enderecoResp.findById(id);
	}
}
