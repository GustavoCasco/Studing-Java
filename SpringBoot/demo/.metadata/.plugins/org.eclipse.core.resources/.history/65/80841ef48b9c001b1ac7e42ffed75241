package com.example.demo.services;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.demo.Models.materiaModel;
import com.example.demo.dtos.MateriaDTO;
import com.example.demo.repositories.materiaRepository;


@Service
public class materiaService {
	@Autowired
	private materiaRepository mReposi;
	
	public List<MateriaDTO> findAll(){
		
	//	List<materiaDto> listDTO = new ArrayList<>();
		
		List<materiaModel> list = this.mReposi.findAll();
		/* convertendo model para DTO*/
		//for (materiaModel materiaModel : list) {
							
		//	listDTO.add( materiaModel.toDto() );
		//}
		return list.stream().map( x -> x.toDto()).collect(Collectors.toCollection(ArrayList::new));
	}
	
	
	public MateriaDTO getById (int id)
	{
		return this.mReposi.findById(id).orElseThrow(() -> new RuntimeException("Materia n√£o encontrada")).toDto();
	}
	
	public List<MateriaDTO> getByName(String nome)
	{
		List<materiaModel> list = this.mReposi.findByNome(nome);
		return list.stream().map(c -> c.toDto()).collect(Collectors.toCollection(ArrayList ::new));
	}
	
	public MateriaDTO cadastrarMateria(materiaModel novaMateria)
	{
		return this.mReposi.save(novaMateria).toDto();
	}
	
	public MateriaDTO updMateria(int id, materiaModel attMateria)
	{
		Optional<materiaModel> mat = this.mReposi.findById(id);
		if(mat.isPresent())
		{
			materiaModel ob = mat.get();
			ob.setNome(attMateria.getNome());
			ob.setProfessor(attMateria.getProfessor());
			return this.mReposi.save(ob).toDto();
		}else
		{
			throw new RuntimeException("Materia nao encontrada");
		}
		
	}
	
	public void deleteMateria(int id)
	{
		mReposi.deleteById(id);
	}
}
